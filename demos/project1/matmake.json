[
  {
    "name": "main",
    "out": "main.exe",
    "dir": "build",
    "flags": "{+} -Wall",
    "pch" : [ "include/precompiled.hpp" ],
    "src": [ "src/*.cpp", "src/*.cppm" ],
    "copy": [
      "data/*"
    ],
    "includes": [
      "include"
    ],
    "sysincludes": [
      "bla"
    ],
    "command": "[exe]"
  },
  {
    "name": "all",
    "in": [ "@main" ],
    "config": [
      "c++17",
      "Wall",
      "Wpedantic"
    ]
  },
  {
    "name": "debug",
    "in": "@all",
    "config": [ "debug" ]
  },
  {
    "name": "g++",
    "in": [ "@all" ],
    "compiler": "g++",
    "dir": "build/g++",
    "command": "[root]"
  },
  {
    "name": "g++-debug",
    "in": [ "@debug" ],
    "compiler": "g++",
    "dir": "build/g++-debug",
    "command": "[root]"
  },
  {
    "name": "msvc",
    "in": [ "@all" ],
    "compiler": "cl",
    "dir": "build/msvc",
    "command": "[root]"
  }
]
